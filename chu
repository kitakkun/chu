#!/usr/bin/env bash

readonly PATTERNS=("可愛くて" "拙くて" "うるさくて" "もたついて" "躓いて" "勝てなくて" "立てなくて" "できなくて" "眠らなくて" "怒らなくて" "教えなくて" "付き合えなくて" "無視しちゃて" "ミスしちゃって" "働かなくて" "家事やらなくて" "頭悪くて" "不甲斐なくて" "頼りなくて" "わからなくて" "金なくて" "遅刻して" "起こしちゃって" "下手くそで" "構えなくて")

COUNT=${#PATTERNS[*]}
INDEX=$(($RANDOM % $COUNT))

echo ${PATTERNS[$INDEX]}ごめん
